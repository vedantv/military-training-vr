<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"

    tools:context="com.example.application.militarytraining.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Military videos using VR"
        android:textSize="32dp"
        android:textColor="#333333"
        android:background="#c80e05"
        android:textAlignment="center"
        android:layout_weight="0.15"
        android:layout_marginBottom="23dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="mission 1"
            android:id="@+id/ms1"
            android:background="#63b7b6"
            android:layout_marginBottom="10dp"

            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#cabf23"
        android:layout_weight="1"
        android:text="mission 2"
        android:id="@+id/ms2"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#9027c1"
        android:layout_weight="1"
        android:text="mission 3"
        android:id="@+id/ms3"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#E86850"
        android:layout_weight="1"
        android:text="mission 4"
        android:id="@+id/ms4"
        android:layout_marginTop="10dp"
        />
</LinearLayout>
